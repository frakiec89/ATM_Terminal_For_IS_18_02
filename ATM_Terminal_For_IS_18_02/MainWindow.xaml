<Window x:Class="ATM_Terminal_For_IS_18_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_Terminal_For_IS_18_02"
        mc:Ignorable="d"
        Title="Мой Банк (Эмитация работы банкомата)" 
        MinHeight="300" MinWidth="300"  ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <StackPanel>
            <TextBox  x:Name="tbNumber"  Margin="5"   ></TextBox>
            <TextBlock Margin="1"   >Введите  номер  карты</TextBlock>
            <TextBox x:Name="tbPin" Margin="5"></TextBox>
            <TextBlock Margin="1"   >Введите пин-код</TextBlock>
            <Button x:Name="btGo" Click="btGo_Click">
                Вход
            </Button>
        </StackPanel>
    </Grid>
</Window>
